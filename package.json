{
  "name": "@archetype-org/clack",
  "version": "0.2.0",
  "description": "a nodejs library for sending IPC commands to an Urbit ship over Conn.c",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/clack.esm.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/clack.esm.mjs"
      }
    }
  },
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "dts build  && cp dist/index.d.ts dist/index.d.mts && cp dist/clack.esm.js dist/clack.esm.mjs",
    "test": "dts test",
    "test:watch": "dts test --watch",
    "test:coverage": "dts test --coverage",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/archetype-org/clack.git"
  },
  "author": "hastyp-patmud",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/archetype-org/clack/issues"
  },
  "homepage": "https://github.com/archetype-org/clack#readme",
  "dependencies": {
    "@urbit/nockjs": "^1.4.0-dev4"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "@types/jest": "^29.5.12",
    "dotenv": "^16.4.5",
    "dts-cli": "^2.0.5",
    "jest": "^29.7.0",
    "typescript": "^5.5.3"
  }
}
